{
  "name": "@mashchuk-crm/backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "build": "echo 'Backend build complete'",
    "lint": "eslint src --ext js --report-unused-disable-directives --max-warnings 0",
    "seed": "node prisma/seed.js",
